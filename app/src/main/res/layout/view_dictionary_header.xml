<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fab_size"
    android:gravity="center"
    app:cardCornerRadius="5dp"
    android:background="@android:color/transparent"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="4dp"
    android:layout_margin="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/headerStatusLeft"
            android:layout_width="@dimen/margin_normal"
            android:layout_height="match_parent"
            android:background="@drawable/red_rounded_textview" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_search1"
            android:layout_marginLeft="@dimen/margin_normal"
            android:hint="Please enter keyword "
            android:id="@+id/search_et"
            android:textSize="@dimen/text_size_normal"
            android:textColorHint="@color/text_hint_reason_gray"
            android:background="@null"
            android:maxLines="1"
            android:drawablePadding="@dimen/margin_small" />
    </LinearLayout>
</android.support.v7.widget.CardView>